#include<iostream>
#include<cmath>
using namespace std;

class quadratic
 {
    float x,y,rpx,ipx,D,a,b,c;
    
    public:
        void getdata();
        void calculate();
 };

void quadratic::getdata()
{
    cout<<"enter the cofficients a,b,c"<<endl;
    cin>>a>>b>>c;
}



void quadratic::calculate()
 {

    D=b*b-4*a*c;

    if(D>0)
    {
        cout<<"roots are real and different"<<endl;
        x=((-b)+sqrt(D))/(2*a);
        y=((-b)-sqrt(D))/(2*a);
        cout<<"roots of given eqn are = "<<x<<","<<y<<endl;
     }


    else if(D==0)
    {
        cout<<"roots are real and equal"<<endl;
        x=((-b)/(2*a));
        y=x;
        cout<<"roots of given eqn are="<<x<<","<<y<<endl;
    }

    else if(D<0)
    {
        cout<<"roots are complex"<<endl;
        rpx=(-b)/(2*a);
        ipx=(sqrt(-D))/(2*a);
        cout<<"first root of given eqn is ="<<rpx<<"+i"<<ipx<<endl;
        cout<<"second root of given eqn is ="<<rpx<<"-i"<<ipx<<endl;
    }

 }

    int main()
    {
        quadratic q;
        q.getdata();
        q.calculate();
        return 0;
     }   



//Output
//enter the cofficients a,b,c
//1 7 12 
//roots are real and different
//roots of given eqn are = -3,-4

//enter the cofficients a,b,c
//1 2 1
//roots are real and equal
//roots of given eqn are=-1,-1

//enter the cofficients a,b,c
//2 1 3
//roots are complex
//first root of given eqn is =-0.25+i1.19896
//second root of given eqn is =-0.25-i1.19896





















